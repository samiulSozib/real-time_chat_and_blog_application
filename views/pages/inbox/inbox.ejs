<%- include('../../partials/header.ejs') %> 

<div>
    <div class="">
        <div id="chat-container">
            <div>
                <a href="#" data-toggle="modal" data-target="#myModal" class="btn btn-primary mb-2">Add Friend</a>
            </div>
            <div class="row">
                <div class="col-lg-4 col-md-6 col-sm-12 bg-dark">
                    <div id="search-container" class="my-2 form-control">
                        <input type="text" placeholder="Search">
                    </div>
                    <div class="overflow-auto conversation_list" id="conversation-list">
                        <% if(conversations.length==0){ %>
                            <p class="lead text-white d-flex justify-content-center">No Conversation</p>
                        <% }else{ %>
                            <% for(let conversation of conversations){ %>
                                <% if(conversation.creator.id==user.id){ %>
                                    <a class="conversation" style="cursor: pointer;" onclick="getMessages('<%= conversation._id %>', '<%= conversation.participant.name %>')">
                                        <% if(conversation.participant.avatar){ %> 
                                            <img src="<%= conversation.participant.avatar %> " class="rounded-circle" alt="img" style="height: 50px; width: 50px;"/>
                                        <% }else{ %>
                                            <img src="/images/nophoto.png" class="rounded-circle" alt="img" style="height: 50px; width: 50px;"/>
                                        <% } %>
                                        <div class="title-text text-white"><%= conversation.participant.name %></div>
                                        <div class="conversation-date text-white"><%= moment(conversation.last_update) %></div>
                                    </a>
                                <% }else{ %>
                                    <a class="conversation" onclick="getMessages('<%= conversation._id %>', '<%= conversation.creator.name %>')" style="cursor: pointer;">
                                        <% if(conversation.creator.avatar){ %>
                                            <img src="<%= conversation.creator.avatar %> " class="rounded-circle" alt="img" style="height: 50px; width: 50px;"/>
                                        <% }else{ %>
                                            <img src="/images/nophoto.png" class="rounded-circle" alt="img" style="height: 50px; width: 50px;"/>
                                        <% } %>
                                        <div class="title-text text-white"><%= conversation.creator.name %></div>
                                        <div class="conversation-date text-white"><%= moment(conversation.last_update) %></div>
                                    </a>
                                <% } %>
                                <hr class="hr_new"> 
                            <% } %>   
                        <% } %>   
                    </div>
                </div>
                <div class="col-lg-8 col-md-6 col-sm-12 bg-secondary p-1" id="chat-message-list">
                    <div id="chat-title">
                            <span id="conversation-partner"><strong></strong></span>
                      
                    </div>
                    <hr class="hr_new">

                    <div id="chat-message-list">
                        <div class="text-center"><h5>Select Conversation</h5></div>
                    </div>

                    <form id="chat-form" method="post" enctype="multipart/form-data">
                        <label for="attachment"><img src="/images/attachment.png" alt="Add Attachment" /></label>
                        <input type="file" multiple name="attachment" class="hide" id="attachment" />
                        <input type="text" name="message" placeholder="Type a message" autocomplete="off" />
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../../partials/footer.ejs') %> 
<%- include('../../partials/add_conversation.ejs') %> 

<script>
    const form = document.querySelector('#chat-form');
    let current_conversation_id;
    const chatTitleContainer = document.querySelector('#conversation-partner');


    async function getMessages(conversation_id,current_conversation_name){
        // const messageFailureToast=Toastify({
        //     text:"Error Loading Message",
        //     duration:1000
        // })

        let response=await fetch(`/inbox/message/${conversation_id}`)
        const result=await response.json()
        console.log(current_conversation_name)

        if(!result.errors && result.data){
            form.style.visibility='visible'

            const {data,user,conversation_id}=result

            current_conversation_id=conversation_id

            if(data.messages){
                let allMessages='';

                if(data.messages.length>0){
                    data.messages.forEach((message)=>{
                        let senderAvatar=message.sender.avatar ? `${message.sender.avatar}`:'/images/nophoto.png'
                        const messageClass=message.sender.id===user.id?'you-message':'other-message'
                        const showAvatar=message.sender.id==user.id?'':`<img src="${senderAvatar}" alt="${message.sender.name}"/>`

                        // message attachments
                        let attachments='<div class="attachments">';

                        if(message.attachment && message.attachment.length>0){
                            message.attachment.forEach(attachment=>{
                                attachments += `<img src="${attachment}" /> `;
                            })
                        }
                        attachments += '</div>';

                        // final message html
                        let messageHTML = `<div class="message-row ${messageClass}"><div class="message-content">
                        ${showAvatar}
                        <div class="message-text">${message.text}</div>
                        ${attachments}
                        <div class="message-time">${moment(message.date_time).fromNow()}</div>
                        </div></div>`;
                        allMessages += messageHTML;
                        messageContainer.innerHTML = allMessages;

                    });
                }else if(data.messages.length===0){
                    messageContainer.innerHTML = '<div class="message-row"></div>';
                }
                
            }else{
                alert('There is no message')
            }
            chatTitleContainer.textContent = current_conversation_name;
        }
    }


</script>

    </body>
</html>